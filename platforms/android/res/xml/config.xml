<?xml version='1.0' encoding='utf-8'?>
<widget id="org.theodi.accelerate" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <splash density="port-hdpi" src="src-splash/android/splash-port-hdpi.png" />
    <splash density="port-ldpi" src="src-splash/android/splash-port-ldpi.png" />
    <splash density="port-mdpi" src="src-splash/android/splash-port-mdpi.png" />
    <splash density="port-xhdpi" src="src-splash/android/splash-port-xhdpi.png" />
    <splash density="port-xxhdpi" src="src-splash/android/splash-port-xxhdpi.png" />
    <splash density="port-xxxhdpi" src="src-splash/android/splash-port-xxxhdpi.png" />
    <name>ODI Learning</name>
    <description>
    	Learn all you need to about Open Data with this app.
    </description>
    <author email="training@theodi.org" href="http://theodi.org">
        The Open Data Institute
    </author>
    <icon src="src-icons/20150923_elearning_icons3U.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Fullscreen" value="true" />
</widget>
